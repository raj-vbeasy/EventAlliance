<!-- BEGIN: Subheader -->
<div class="" appunwraptag="">
    <div class="m-subheader-search">
        <h1 style="font-size: 2.8rem;font-weight: 400;color: #fff;margin: 0;">
            Events
        </h1>
        <form class="m-form">
            <div class="m-grid m-grid--ver-desktop m-grid--desktop">
                <div class="m-grid__item m-grid__item--middle">
                    <div class="m-input-icon m-input-icon--fixed m-input-icon--fixed-large m-input-icon--right">
                        <input class="form-control form-control-sm m-input" placeholder="Keyword" type="text">
                    </div>
                    <div class="m-input-icon m-input-icon--fixed m-input-icon--fixed-md m-input-icon--right">
                        <select class="form-control m-hrader-search-form__select">
                            <option>All Status</option>
                            <option>Hip hop</option>
                            <option>Jazz</option>
                        </select>
                    </div>
                    <div class="m-input-icon m-input-icon--fixed m-input-icon--fixed-md m-input-icon--right">
                        <select class="form-control m-hrader-search-form__select">
                            <option>All Dates</option>
                            <option>Low Budget</option>
                            <option>Heigh Budget</option>
                        </select>
                    </div>
                    <div class="m-input-icon m-input-icon--fixed m-input-icon--fixed-md m-input-icon--right">
                        <select class="form-control m-hrader-search-form__select">
                            <option>All Teams</option>
                            <option>Last 30 Days</option>
                            <option>Last 20 Days</option>
                        </select>
                    </div>
                    <div class="m-input-icon m-input-icon--fixed m-input-icon--fixed-md m-input-icon--right" style="width:80px;">
                        <button class="btn btn-outline-success  m-btn--bolder m-btn--uppercase" type="button">
                            Filter
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- END: Subheader -->

<div class="m-content">
	<div class="row">
		<div class="col-lg-12">
			<div class="m-portlet m-portlet--tabs">
				<div class="m-portlet__body">
					<div id="event_datatable" (click)="TableClick($event)"></div>
				</div>
			</div>
		</div>
	</div>
</div>



<!-- modal start form here -->
<div class="modal fade" id="editEvent" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{modalTitle}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xl-3">
                        <ul class="m-nav m-nav--hover-bg m-portlet-fit--sides">
                            <li class="m-nav__item" >
                                <a class="m-nav__link" data-toggle="tab" href="#" (click)="toggleMenu(1)" role="tab">
                                    <span class="m-nav__link-text">Profile</span>
                                </a>
                            </li>
                            <li class="m-nav__item">
                                <a  class="m-nav__link" data-toggle="tab" href="#" (click)="toggleMenu(2)" role="tab">
                                    <span class="m-nav__link-text">Location</span>
                                </a>
                            </li>
                            <li class="m-nav__item">
                                <a href="#" class="m-nav__link" (click)="toggleMenu(3)">
                                    <span class="m-nav__link-text">Act Reference</span>
                                </a>
                            </li>
                            <li class="m-nav__item">
                                <a href="#" class="m-nav__link" (click)="toggleMenu(4)">
                                    <span class="m-nav__link-text">Public Survey</span>
                                </a>
                            </li>
                            <li class="m-nav__item">
                                <a href="#" class="m-nav__link" (click)="toggleMenu(5)">
                                    <span class="m-nav__link-text">Options</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-xl-7 ">
                        <!-- Profile -->
                        <div class="m-card-profile" id="div_profile"  role="tabpanel" *ngIf="activatedMenu==1">
                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">
                                    Profile
                                </h3>
                            </div>
                            <div class="m-card-profile__pic">
                                <div class="m-card-profile__pic-wrapper">
                                    <img src="./assets/eventalliance/media/img/users/user4.jpg" alt="">
                                </div>
                            </div>
                            <div class="m-card-profile__details">
                                <small>Photo requirement go here...</small>
                            </div>
                            <div class="form-group m-form__group">
                                <label>Event Title *</label>
                                <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.name"  placeholder="Colorado BBQ Challenge">
                            </div>
                            <div class="form-group m-form__group">
                                <label>Date Range *</label>
                                <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.eventDateRange" placeholder="06/02/2018 - 08/02/2018">
                            </div>
                            <div class="form-group m-form__group">
                                <label>Description</label>
                                <textarea class="form-control m-input m-input--square" [(ngModel)] = "formData.description" placeholder="Provide a brief description of your event concept"></textarea>
                            </div>
                        </div>
                        <!-- <div class="m-separator m-separator--dashed m-separator--lg"></div> -->
                        <!-- location -->
                        <div class="m-card-profile" id="div_location" role="tabpanel" *ngIf="activatedMenu==2">
                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">
                                    Location
                                </h3>
                            </div>
                            <div class="form-group m-form__group">
                                <label>Venue Name*</label>
                                <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.venue_name" placeholder="Venue Name">
                            </div>
                            <div class="form-group m-form__group">
                                <label>Address 1 *</label>
                                <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.address_line_1" placeholder="Address 1">
                            </div>
                            <div class="form-group m-form__group">
                                <label>Address 2 *</label>
                                <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.address_line_2" placeholder="Address 2">
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>City *</label>
                                    <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.city" placeholder="City">
                                </div>
                                <div class="col-md-3">
                                    <label>State *</label>
                                    <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.state" placeholder="State">
                                </div>
                                <div class="col-md-3">
                                    <label>ZIP *</label>
                                    <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.zip" placeholder="Zip Code">
                                </div>
                            </div>
                        </div>
                       <!--  <div class="m-separator m-separator--dashed m-separator--lg"></div> -->
                        <!-- act preference -->
                        <div class="m-card-profile" id="div_act_preference"  *ngIf="activatedMenu==3">
                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">
                                    ACT Preferences
                                </h3>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Total Budget *</label>
                                    <select class="form-control m-input m-input--square" [(ngModel)]="selectedBudgetId">
                                       <option *ngFor="let eventAmount of amounts" [value]="eventAmount.id">{{eventAmount.amount}}</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label>No of Artist Needed *</label>
                                    <select class="form-control m-input m-input--square" [(ngModel)]="selectedArtistNumber">
                                       <option *ngFor="let number_of_artist of _number_of_artists" [value]="eventAmount.id">{{eventAmount.amount}}</option>
                                    </select>

                                </div>
                            </div>
                            <br/>
                            <div class="form-group m-form__group">
                                <label>Artist Genres *</label>
                                <input type="text" class="form-control m-input m-input--square" placeholder="Soul Folk">
                            </div>
                            <div class="form-group m-form__group">
                                <label>Audience Demographics *</label>
                                <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.audience_demographics" placeholder="Audience Demographics">
                            </div>
                        </div>
                        <!-- <div class="m-separator m-separator--dashed m-separator--lg"></div> -->
                        <!-- public survey-->
                        <div class="m-card-profile" id="div_public_survey" *ngIf="activatedMenu==4">
                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">
                                    Public Survery
                                </h3>
                            </div>
                            <p>
                                <strong>
                                    Setting>
                                </strong>
                            </p>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Survery title *</label>
                                    <select class="form-control m-input m-input--square">
                                        <option>Open</option>
                                        <option>Close</option>
                                        <option>All</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label>URL</label>
                                    <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.url" placeholder="http://google.com">
                                </div>
                            </div>
                            <br/>
                            <div class="row">

                                <div class="col-md-6 offset-md-6">
                                    <button type="button" class="btn btn-outline-metal m-btn btn-sm m-btn--outline-2x m-btn--uppercase">Copy</button>
                                    <button type="button" class="btn btn-outline-metal m-btn btn-sm m-btn--outline-2x m-btn--uppercase">Preview</button>

                                </div>
                            </div>


                            <!-- <div class="m-separator m-separator--dashed m-separator--lg"></div> -->

                            <div class="m-card-profile__pic">
                                <div class="m-card-profile__pic-wrapper">
                                    <img src="./assets/eventalliance/media/img/users/user4.jpg" alt="">
                                </div>
                            </div>
                            <div class="m-card-profile__details">
                                <small>Photo requirement go here...</small>
                            </div>
                            <div class="form-group m-form__group">
                                <label>Survey Title *</label>
                                <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.public_survey_title" placeholder="Survay title here...">
                            </div>
                            <div class="form-group m-form__group">
                                <label>Welcome Message *</label>
                                <textarea class="form-control m-input m-input--square" [(ngModel)] = "formData.welcome_message" placeholder="Welcome message here..."></textarea>
                            </div>
                            <div class="form-group m-form__group">
                                <label>Legal Disclamer *</label>
                                <textarea class="form-control m-input m-input--square" [(ngModel)] = "formData.legal_disclaimer" placeholder="Legal disclamer here..."></textarea>
                            </div>
                            <div class="form-group m-form__group">
                                <label>Event Description *</label>
                                <textarea class="form-control m-input m-input--square" [(ngModel)] = "formData.event_description" placeholder="Event description here..."></textarea>
                            </div>
                            <div class="form-group m-form__group">
                                <label>Opt-In *</label>
                                <input type="text" class="form-control m-input m-input--square" [(ngModel)] = "formData.opt_in" placeholder="Opt-In here...">
                            </div>
                            <div class="form-group m-form__group">
                                <label>Opt-In Message *</label>
                                <textarea class="form-control m-input m-input--square" [(ngModel)] = "formData.opt_in_message" placeholder="Opt-In message here... "></textarea>
                            </div>
                            <div class="form-group m-form__group">
                                <label>Thank you Message *</label>
                                <textarea class="form-control m-input m-input--square" [(ngModel)] = "formData.thanks_message" placeholder="Thank you message here..."></textarea>
                            </div>
                        </div>
                        <!-- <div class="m-separator m-separator--dashed m-separator--lg"></div> -->
                        <!-- options -->
                        <div class="m-card-profile" id="div_options" *ngIf="activatedMenu==5">
                            <div class="m-form__heading">
                                <h3 class="m-form__heading-title">
                                    Options
                                </h3>
                            </div>

                            <div class="form-group m-form__group">
                                Team Review Enabale 
                                <input type="checkbox" *ngIf="reviewEnabale==0" checked data-toggle="toggle">
                            </div>

                        </div>
                        <!-- *************************** -->

                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-metal m-btn m-btn--custom m-btn--outline-2x m-btn--uppercase float-left" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-accent m-btn m-btn--custom m-btn--bolder m-btn--uppercase">Update</button>
            </div>
        </div>
    </div>
</div>